generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
}

model Habit {
  id               String          @id @default(cuid())
  name             String
  description      String?
  trackingType     String          @default("binary")
  targetValue      Float?
  targetUnit       String?
  frequencyType    String          @default("daily")
  frequencyDays    String?
  color            String?
  icon             String?
  reminderTime     String?
  reminderContext  String?
  autoTrackSource  String?
  strengthScore    Float           @default(0.0)
  createdAt        DateTime        @default(now())
  updatedAt        DateTime        @updatedAt
  archived         Boolean         @default(false)

  records          HabitRecord[]
  scores           HabitScore[]
  insights         Insight[]
}

model HabitRecord {
  id             String    @id @default(cuid())
  habitId        String
  date           String
  status         String    @default("missed")
  value          Float?
  completionRate Float?
  note           String?
  skipReason     String?
  autoTracked    Boolean   @default(false)
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt

  habit          Habit     @relation(fields: [habitId], references: [id], onDelete: Cascade)

  @@unique([habitId, date])
}

model HabitScore {
  id               String    @id @default(cuid())
  habitId          String
  date             String
  strengthScore    Float
  momentumScore    Float?
  consistencyScore Float?

  habit            Habit     @relation(fields: [habitId], references: [id], onDelete: Cascade)
}

model Insight {
  id          String    @id @default(cuid())
  habitId     String?
  type        String
  title       String
  description String
  data        String?
  priority    Int       @default(0)
  dismissed   Boolean   @default(false)
  createdAt   DateTime  @default(now())
  expiresAt   DateTime?

  habit       Habit?    @relation(fields: [habitId], references: [id], onDelete: Cascade)
}

model Setting {
  key        String    @id
  value      String
  updatedAt  DateTime  @updatedAt
}